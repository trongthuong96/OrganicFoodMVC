
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <div class="col-8">
        <h2 class="text-primary">Danh sách sản phẩm </h2>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-info text-white" onclick="location.href='@Url.Action("ExportToExcel", "Product")'"><i class="fas  fa-file-export"></i> &nbsp;Xuất Excel</a>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Tạo Mới</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered pt-2" style="width: 100%">
        <thead class="table-dark">
            <tr>
                <th></th>
                <th>Tên sản phẩm</th>
                <th>Thông tin</th>
                <th>Loại sản phẩm</th>
                <th>Thương hiệu</th>
                <th>Số kg</th>
                <th>Giá</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}